<div class="login-box">
  <form method="POST"
        style="margin: auto;"
        action="<%= @signin_path %>">
    <h4 style="text-align: center; margin-bottom: 0.2rem;">Sign in to Noa</h4>
    <p style="text-align: center;">
      to continue to <span class="grantee"><%= @client_name %></span>
    </p>
    <div class="row">
      <label for="username">Username</label>
      <input class="u-full-width"
             value="<%= @params["username"] %>"
             placeholder="your@email.address"
             name="username" id="username" type="email">
    </div>
    <div class="row">
      <label for="pswd">Password</label>
      <input class="u-full-width" placeholder="password..."
             name="pswd" id="pswd" type="password" autocomplete="off">
      <input type="hidden" name="_csrf_token"
             value="<%= get_csrf_token() %>">
      <input type="hidden" name="target_url"
            value="<%= @params["target_url"] %>">
      <input type="hidden" name="state"
             value="<%= @params["state"] %>">
    </div>
    <div class="row">
      <%= if assigns[:error_msg] != nil do %>
        <div class="error"><%= @error_msg %></div>
      <% else %>
        <div>&nbsp;</div>
      <% end %>
    </div>
    <div clsss="row">
      <button class="button-primary u-full-width"
              name="signin" value="signin" type="submit">
        Sign in
      </button>
    </div>
  </form>
</div>
